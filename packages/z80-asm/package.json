{
  "name": "z80-asm",
  "version": "1.0.0",
  "description": "Z80 assembler and IDE",
  "scripts": {
    "build": "webpack",
    "build:test": "tsc -p tsconfig.test.json",
    "start": "electron dist/electron-main.js",
    "generate": "tsc --project src/opcodes && node src/opcodes/dist/opcodes/GenerateJson.js",
    "test": "ts-mocha -p tsconfig.test.json src/**/*.spec.ts",
    "watch": "webpack --watch",
    "clean": "rm -rf dist dist-tests gen"
  },
  "author": "Lawrence Kesteloot <lk@teamten.com> (https://www.teamten.com/lawrence/)",
  "license": "MIT",
  "keywords": [
    "z80",
    "assembler"
  ],
  "bin": {
    "zasm": "bin/zasm"
  },
  "private": true,
  "dependencies": {
    "chalk": "^3.0.0",
    "codemirror": "^5.52.2",
    "electron-store": "^5.1.1",
    "tippy.js": "^6.1.1",
    "z80-base": "^1.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/codemirror": "0.0.88",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.35",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "electron": "^8.2.0",
    "html-webpack-plugin": "^4.2.0",
    "mocha": "^7.1.1",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-build-notifier": "^2.0.0",
    "webpack-cli": "^3.3.11"
  }
}
